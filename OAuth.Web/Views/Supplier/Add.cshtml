@{
    ViewBag.Title = "新增商管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PagedList<Supplier>
<div class="mod-navbar">
    <div class="main-header">
        <div class="title">
            <h3>
                <a href="javascript:;"><i class="icon icon-list"></i></a>
                <a href="javascript:;">新增商管理</a>
            </h3>
        </div>
    </div>
    <div class="sub">
        <div class="sub_toolbar">
        </div>
    </div>
</div>
<div class="navigator-results mCustomScrollbar" data-mcs-theme="dark">
    <div class="frame">
        <div class="frame-header">
            <span class="title-breadcrumb">
                <a href="javascript:;">表单</a>
            </span>
        </div>
        <hr class="m0" />
        <div class="widget widget-mytask">
            <div class="body">
                <form class="form-horizontal aui" id="add_item_form" action="/Item/Step1" method="post">
                    <fieldset>
                        <div class="row">
                            <div class="col-lg-5">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">工程名称</label>
                                    <div class="col-md-7">
                                        <input type="text" name="ItemName" class="form-control" datatype="*" />
                                    </div>
                                </div>

                                <div class="form-group has-feedback">
                                    <label class="col-md-4 control-label">开始日期</label>
                                    <div class="col-md-7">
                                        <input type="text" class="form-control" id="StartDate" name="StartDate" aria-describedby="inputSuccess1Status" datatype="*">
                                        <span class="glyphicon glyphicon-calendar form-control-feedback" aria-hidden="true"></span>
                                        <span id="inputSuccess1Status" class="sr-only">(success)</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">备注</label>
                                    <div class="col-md-7">
                                        <input type="text" name="Memo" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">单据类型</label>
                                    <div class="col-md-7">
                                        <select id="ItemMode" name="ItemName" class="form-control">
                                            <option>型材询价单</option>
                                            <option>五金询价单</option>
                                            <option>板材询价单</option>
                                            <option>管材询价单</option>
                                            <option>法兰询价单</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group has-feedback">
                                    <label class="col-md-4 control-label">截止日期</label>
                                    <div class="col-md-7">
                                        <input type="text" class="form-control" id="EndDate" name="EndDate" aria-describedby="inputSuccess2Status" datatype="*">
                                        <span class="glyphicon glyphicon-calendar form-control-feedback" aria-hidden="true"></span>
                                        <span id="inputSuccess2Status" class="sr-only">(success)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-10 col-lg-10">
                                <div class="col-md-offset-2 pl5">
                                    <button type="button" class="btn btn-default btn-sm" id="cancel">后退</button>
                                    <button type="submit" class="btn btn-primary btn-sm" id="sure">下一步</button>
                                    @Html.AntiForgeryToken()
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>

    </div>
</div>