@{
    Layout = null;
}
<!DOCTYPE html>
<html >
<head>
    <meta charset="utf-8">
    <title>用户登录</title>
    <!-- The styles -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/login.css" rel="stylesheet" />
    <!-- jQuery -->
    <script src="~/assets/js/jquery-1.10.2.min.js"></script>
    <!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="/assets/js/html5shiv.min.js"></script>
    <![endif]-->

</head>

<body>
    <div class="container">
        <div class="row">

            <div class="row">
                <div class="col-md-12 center login-header">
                    <h2>欢迎用户登录</h2>
                </div>
                <!--/span-->
            </div><!--/row-->

            <div class="row">
                <div class="well col-md-5 center login-box">
                    <form class="form-horizontal oa-form" action="" method="post">
                        <fieldset>
                            <div class="clearfix"></div><br>
                            <div class="clearfix"></div><br>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user red"></i></span>
                                <input type="text" class="form-control" name="UserName" placeholder="用户名" datatype="*" nullmsg="请输入用户名">
                            </div>
                            <div class="clearfix"></div><br>

                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock red"></i></span>
                                <input type="password" class="form-control" name="Password" placeholder="密码" datatype="*" nullmsg="请输入登录密码">
                            </div>
                            <div class="clearfix"></div><br>
                            
                            @if (TempData["Message"] != null)
                            {
                                <div class="tipmsg alert alert-danger">
                                    @TempData["Message"]
                                </div>
                            }
                            else
                            {
                                <div class="tipmsg"></div>
                            }
                            
                            <div class="clearfix"></div>
                            <div class="input-prepend">
                                <label class="remember" for="remember"><input type="checkbox" id="remember" name="RememberMe" value="1"> 记住登录</label>
                            </div>
                            <div class="clearfix"></div>

                            <p class="center col-md-5">
                                <button type="submit" class="btn btn-primary">登录</button>
                            </p>
                        </fieldset>
                    </form>
                </div>
                <!--/span-->
            </div><!--/row-->
        </div><!--/fluid-row-->

    </div><!--/.fluid-container-->

</body>
</html>
<script src="~/assets/js/Validform_v5.3.2_min.js"></script>
<script>
    $(function () {
        $(".oa-form").Validform({
            tiptype: function (msg, o, cssctl) {
                var objtip = $(".tipmsg");
                cssctl(objtip, o);
                if (o.type === 2) {
                    objtip.text("");
                    objtip.removeClass("alert alert-danger");
                }
                else {
                    objtip.text(msg);
                    objtip.addClass("alert alert-danger");
                }
            }
        });
    });
</script>